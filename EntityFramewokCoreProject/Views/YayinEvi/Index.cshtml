@model IEnumerable<DataModel.Models.YayinEvi>
<br />
<br />

<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-10">
            <h2 class="text-info">Yayin Evi Listesi</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-action="Update_Insert" class="btn btn-info form-control">Yeni YayınEvi Ekle</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>YayınEvi Adı</th>
                    <th>Lokasyon</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.YayinEviAdi</td>  
                        <td>@item.Lokasyon</td>
                        <td>
                            <a class="btn btn-danger text-white" asp-action="Update_Insert" asp-route-Id="@item.YayinEvi_Id">Düzenle</a>
                            <a class="btn btn-primary text-white" asp-action="Sil" asp-route-Id="@item.YayinEviAdi">Sil</a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Kayıt Bulunamadı...</p>
        }
    </div>
</div>

