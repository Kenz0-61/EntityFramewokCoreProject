@model DataModel.Models.YayinEvi
@{
    var title = "Yayın Evi Oluştur";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="YayinEvi_Id" /> @*Yazar_Id tutacak gizli olarak tutacaktır.*@
        @if (Model.YayinEvi_Id != 0)
        {
            title = "Yayın Evi Düzenle";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="fw-bold" asp-for="YayinEviAdi"></label>
                </div>
                <div class="col-8">
                    <input asp-for="YayinEviAdi" class="form-control" />
                    <span asp-validation-for="YayinEviAdi" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Lokasyon"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Lokasyon" class="form-control" />
                    <span asp-validation-for="Lokasyon" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-grou row">
                <div class="col-4 offset-4">
                    @if (Model.YayinEvi_Id != 0)
                    {
                        <button type="submit" class="btn btn-primary form-control">Güncelle</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Ekle</button>
                    }
                    
                </div>
                <div class="col-4">
                <a asp-action="Index" class="btn btn-success form-control">Listeye Geri Dön</a>
            </div>
                
            </div>

        </div>

    </div>

</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}



